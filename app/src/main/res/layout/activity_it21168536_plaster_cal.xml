    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="389dp"
        android:layout_height="675dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/calculate_bg" />

    <TextView
        android:id="@+id/palster_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="116dp"
        android:text="PLASTER CALCULATION"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/plaster_logo"
        android:layout_width="31dp"
        android:layout_height="27dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/palster_headline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plaster_logo" />

    <Button
        android:id="@+id/cal_plaster"
        android:layout_width="83dp"
        android:layout_height="30dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="448dp"
        android:layout_marginEnd="16dp"
        android:background="#1D485C"
        android:text="calculate"
        android:textColor="#FFFEFE"
        android:textSize="13dp"
        app:layout_constraintEnd_toStartOf="@+id/reset_plaster"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView29"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,UnknownId" />

    <Button
        android:id="@+id/reset_plaster"
        android:layout_width="102dp"
        android:layout_height="30dp"
        android:layout_marginTop="364dp"
        android:background="#F8CC39"
        android:text="Reset"
        android:textColor="#1D485C"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.796"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/palster_headline"
        tools:ignore="TouchTargetSizeCheck,UnknownId" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="24dp"
        android:text="RESULTS"
        android:textColor="#FAFAFA"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bag_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_plaster"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/cement_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:text="Cement"
        android:textColor="#FAFAFA"
        app:layout_constraintBottom_toTopOf="@+id/sand_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cal_plaster"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/sand_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="72dp"
        android:text="Sand"
        android:textColor="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ton_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="72dp"
        android:text="Ton"
        android:textColor="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/unit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Unit"
        app:layout_constraintBottom_toTopOf="@+id/plaster_type_text"
        app:layout_constraintEnd_toStartOf="@+id/meter"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/plaster_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Plaster Type"
        app:layout_constraintBottom_toTopOf="@+id/length_text"
        app:layout_constraintEnd_toStartOf="@+id/plaster_type"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/length_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="Length"
        app:layout_constraintBottom_toTopOf="@+id/width_text"
        app:layout_constraintEnd_toStartOf="@+id/length"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/width_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="336dp"
        android:text="Width"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/width"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/meter"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Meter/CM"
        android:textColor="#CAC4C4"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/plaster_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/palster_headline"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/plaster_type"
        android:layout_width="148dp"
        android:layout_height="48dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/length"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/length"
        android:layout_width="149dp"
        android:layout_height="53dp"
        android:layout_marginBottom="392dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/width"
        android:layout_width="149dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/length"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/cement_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textColor="#FAFAFA"
        app:layout_constraintEnd_toStartOf="@+id/bag_text"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toEndOf="@+id/cement_txt"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/sand_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="0"
        android:textColor="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ton_text"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintStart_toEndOf="@+id/sand_text"
        app:layout_constraintTop_toBottomOf="@+id/cement_count"
        app:layout_constraintVertical_bias="0.459" />

</androidx.constraintlayout.widget.ConstraintLayout>